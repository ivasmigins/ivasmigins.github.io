<Window x:Class="RecipeSearchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Search" Height="350" Width="400">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="textBoxSearch" Width="200" Height="23" Margin="0,0,10,0"/>
            <Button x:Name="buttonSearch" Content="Search" Width="75" Click="buttonSearch_Click"/>
        </StackPanel>
        <ListBox x:Name="listBoxResults" Height="300" Margin="0,10,0,0" SelectionChanged="listBoxResults_SelectionChanged"/>
    </StackPanel>
</Window>